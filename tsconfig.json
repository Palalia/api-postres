{
  "compilerOptions": {
    /*Define donde esta el archivo fuente y donde se compilan*/
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "strict": true,  
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
